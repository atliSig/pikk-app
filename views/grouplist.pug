extends layout

block content
    .row
        .col-lg-12
            .card
                .card-block
                    p Here You can see all the groups that you currently belong to
                    a.btn.btn-primary.pull-right(href="/g/creategroup") Create new group
    .row
        .col-lg-12
            .card
                .card-block
                    if groups
                        if groups.length < 2
                            each group in groups
                                    .card
                                        .card-block
                                            .card-title
                                                h5=group.name
                                            .card-text
                                                p.text-muted=group.description
                                            a(href="/g/"+group.id).btn.btn-primary.pull-right View group
                        else
                            .card-columns
                                each group in groups
                                    .card
                                        .card-block
                                            .card-title
                                                h5=group.name
                                            .card-text
                                                p.text-muted=group.description
                                            a(href="/g/" + group.id).btn.btn-primary.pull-right View group
                    else
                        h2 No groups to display
