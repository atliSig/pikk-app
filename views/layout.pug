doctype html
html(lang="en")
    head
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        link(href="https://fonts.googleapis.com/css?family=Julius+Sans+One|Montserrat" rel="stylesheet")
        link(rel='icon', type='image/png', href='images/pikk-avatar.png')
        link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
        link(href="/stylesheets/style.css", rel='stylesheet')
        link(rel='stylesheet', type='text/css', href='slick/slick.css')
        link(rel='stylesheet', type='text/css', href='slick/slick-theme.css')
        block links
    body
        nav.navbar.navbar-light.bg-faded
            a.navbar-brand(href='#')
                img.d-inline-block.align-top(src='images/pikk-avatar.png', width='30', height='30', alt='')
                | Pikk
            ul.nav.navbar-nav
                li.nav-item.active
                    a.nav-link(href='#')
                        | Link
                        span.sr-only (current)
                li.nav-item
                    a.nav-link(href='#') Link
                li.nav-item.dropdown
                    a#supportedContentDropdown.nav-link.dropdown-toggle(href='http://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown
                    .dropdown-menu(aria-labelledby='supportedContentDropdown')
                        a.dropdown-item(href='#') Action
                        a.dropdown-item(href='#') Another action
                        a.dropdown-item(href='#') Something else here
            form.form-inline.float-xs-right(method='get', action='search/')
                input.form-control(name='query', value='macland', type='text')
                button.btn.btn-secondary(type='submit' id="search-button") Leita
        .container-fluid.main-wrapper
            .row
                .col-lg-2
                .col-lg-8
                    block content
                .col-lg-2
        script(src="/tether/dist/js/tether.min.js")
        script(src="/jquery/dist/jquery.min.js")
        script(src="/bootstrap/dist/js/bootstrap.min.js")
        script(type='text/javascript', src='slick/slick.min.js')
        block scripts